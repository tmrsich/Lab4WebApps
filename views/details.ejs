<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="/styles/allstyles.css">
    <link rel="stylesheet" href="/styles/detailstyles/details-table.css">
    <link rel="stylesheet" href="/styles/detailstyles/modal-styles.css">
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
    <link rel="manifest" href="/favicon/site.webmanifest">
    <title>Details</title>
</head>

    <!--A fixed navigation bar with icons and links-->
    <nav class="z-depth-5" name="navigation-bar">
        <h1 class="nav-links" id="homepage"><a class="nav-href" id="homepage-link" href="/">Home</a>
            <img class="nav-icons" id="homepage-icon" src="/images/welcomeIcon.png">
        </h1>
        <h1 class="nav-links" id="inventory"><a class="nav-href" id="inventory-link" href="/inventory">Inventory</a>
            <img class="nav-icons" id="inventory-icon" src="/images/inventoryIcon.png">
        </h1>
        <h1 class="nav-links" id="details"><a class="nav-href" id="details-link" href="/inventory/details">Details</a>
            <img class="nav-icons" id="details-icon" src="/images/detailsIcon.png">
        </h1>
    </nav>

    <!--Full inventory table with edit and delete buttons-->
    <div id="full-inventory-table">
        <div class="table z-depth-5" id="inventory-table">
            <table class="highlight responsive-table">
                <thead>
                    <tr>
                        <th id="class-name">Class:</th>
                        <th id="assignment-name">Assignment Name:</th>
                        <th id="assignment-type">Type:</th>
                        <th id="assignment-format">Format:</th>
                        <th id="due-date">Due Date:</th>
                        <th id="priority">Priority (1-10):</th>
                        <th id="interest-level">Interest Level (1-10):</th>
                        <th id="relevance-level">Relevance Level (1-10):</th>
                    </tr>
                </thead>
                <tr>
                    <td><%=class_name%></td>
                    <td><%=assignment_name%></td>
                    <td><%=assignment_type%></td>
                    <td><%=assignment_format%></td>
                    <td><%=due_date%></td>
                    <td><%=priority_rating%></td>
                    <td><%=interest_level%></td>
                    <td><%=relevance_level%></td>
                </tr>
            </table>
        </div>

        <div class="table z-depth-5" id="inventory-table">
            <table class="highlight responsive-table">
                <thead>
                    <tr>
                        <th id="description">Description:</th>
                    </tr>
                </thead>
                <tr>
                    <td><%=description%></td>
                </tr>
            </table>
        </div>
    </div>

    <!--Modal trigger-->
    <a class="modal-trigger btn waves-effect waves-light blue darken-3 z-depth-2" href="#modal-editinfo" id="moreedit-button">More/Edit</a>
    
    <!--Modal content-->
    <div id="modal-editinfo" class="modal">
        <div class="modal-content">
            <table class="modal-table responsive-table" style="width: 100%;">
                <tr>
                    <td>
                        <div class="input-field">
                            <input id="class-name-input" type="text">
                            <label for="class-name-input">Class Name</label>
                        </div>
                    </td>
                    
                    <td>
                        <div class="input-field">
                            <input id="assignment-name-input" type="text">
                            <label for="assignment-name-input">Assignment Name</label>
                        </div>
                    </td>

                    <td>
                        <div class="input-field">
                            <input id="assignment-type-input" type="text">
                            <label for="assignment-type-input">Assignment Type</label>
                        </div>
                    </td>

                    <td>
                        <div class="input-field">
                            <input id="assignment-format-input" type="text">
                            <label for="assignment-format-input">Assignment Format</label>
                        </div>
                    </td>
                </tr>
                
                <tr>
                    <table style="margin: 0; width: 100%;">
                        <td>
                            <div class="input-field">
                                <input id="due-date-input" type="date">
                                <label for="due-date-input">Due Date</label>
                            </div>
                        </td>

                        <td>
                            <div class="input-field">
                                <input id="priority-rating-input" type="range" min="1" max="10" step="1" style="margin-top: 50px">
                                <label for="priority-rating-input">Priority</label>
                        </td>

                        <td>
                            <div class="input-field">
                                <input id="interest-level-input" type="range" min="1" max="10" step="1" style="margin-top: 50px">
                                <label for="interest-level-input">Interest Level</label>
                            </div>
                        </td>

                        <td>
                            <div class="input-field">
                                <input id="relevance-level-input" type="range" min="1" max="10" step="1" style="margin-top: 50px">
                                <label for="relevance-level-input">Relevance Level</label>
                            </div>
                        </td>
                    </table>
                </tr>
                    <!--Another table because the td element doesn't extend to the 100% width of the outer table-->
                    <table style="margin: 0; width: 100%;">
                        <tr>
                            <td>
                                <div class="input-field">
                                    <input id="description-input" type="text">
                                    <label for="description-input">Description</label>
                                </div>
                            </td>
                        </tr>
                    </table>
                </tr>
            </table>
        </div>

        <div class="footer-modal">
            <a href="#!" class="modal-close save-exit-modal blue lighten-1 waves-effect waves-blue btn-flat">Save & Exit
            <a href="#!" class="modal-close exit-modal blue lighten-1 waves-effect waves-blue btn-flat">Exit</a>
        </div>
    </div>

    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    
    <!-- initialize Materialize elements -->
    <script>M.AutoInit();</script>
</html>